{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build current folder",
      "type": "shell",
      "command": "pushd \"${fileDirname}\" && gcc -g *.c -o app.exe && popd",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "C:\\Windows\\System32\\cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    }
  ]
}
